{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
  {{#with data}}
    <div class="main__content">
      <header class="header__content header">
        <h1 class="title">{{name}}</h1>
        <a href="/">
          <img src="/img/close.svg">
        </a>
      </header>
      <a href="spotify-playlist-add?playlistId={{playlistId}}" class="button">
        <img src="/img/add-1.svg">
        Додати до плейлиста
      </a>
      <ul class="list">
        {{#each tracks}}
          <div class="track__container">
            <li class="track">
              <img width="92px" height="92px" src="{{image}}" alt="{{name}}">
              <div class="track__content">
                <strong class="track__name">{{name}}</strong>
                <em class="text--gray">{{author}}</em>
              </div>
            </li>
            <a class="button--center" href="spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}">
              <img src="/img/delete.svg">
            </a>
          </div>
        {{/each}}
      </ul>
    </div>
  {{/with}}
</main>
