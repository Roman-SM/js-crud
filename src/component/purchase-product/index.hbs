{{#with data}}
  <div class="purchase-card">
    <img src="{{img}}" alt="{{title}}" class="purchase-card__image">
    <h2 class="purchase-card__title">{{title}}</h2>
    <p class="purchase-card__description">{{description}}</p>
    {{#each category}}
      <span class="purchase-card__category purchase-card__category--{{id}}">{{text}}</span>
    {{/each}}
    <a href="/purchase-product?id={{id}}">
      {{>button text="Купити зараз" price=price}}
    </a>
  </div>
{{/with}}